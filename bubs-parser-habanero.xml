<?xml version="1.0" encoding="UTF-8"?>
<project name="bubs-parser" default="all">
  
  
  <property file="bubs-parser-habanero.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.o/**"/>
    <exclude name="**/*.obj/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.swc"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.egg"/>
    <include name="*.ane"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.ant-contrib-1.0b3.classpath">
    <pathelement location="${basedir}/build-lib/ant-contrib-1.0b3.jar"/>
    <pathelement location="${basedir}/build-lib/bcel-5.2.jar"/>
    <pathelement location="${basedir}/build-lib/commons-lang-2.4.jar"/>
    <pathelement location="${basedir}/build-lib/genjar.jar"/>
  </path>
  
  <path id="library.cltool4j-1.0.3.classpath">
    <pathelement location="${basedir}/lib/cltool4j-1.0.3.jar"/>
    <pathelement location="${basedir}/lib/fastutil-6.5.15.jar"/>
    <pathelement location="${basedir}/lib/hamcrest-core-1.3.jar"/>
    <pathelement location="${basedir}/lib/javax.servlet-api-3.0.1.jar"/>
    <pathelement location="${basedir}/lib/junit-4.11.jar"/>
  </path>
  
  <path id="library.habanero-java-lib-0.1.2.classpath">
    <pathelement location="${basedir}/lib/habanero-java-lib-0.1.2.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module bubs-parser -->
  
  <dirname property="module.bubs-parser.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.bubs-parser" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bubs-parser" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bubs-parser" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bubs-parser" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="bubs-parser.output.dir" value="${module.bubs-parser.basedir}/build"/>
  <property name="bubs-parser.testoutput.dir" value="${module.bubs-parser.basedir}/build"/>
  
  <path id="bubs-parser.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bubs-parser.module.production.classpath">
    <pathelement location="${basedir}/java/bsd-lib/cjunit.jar"/>
    <path refid="${module.jdk.classpath.bubs-parser}"/>
    <pathelement location="${basedir}/java/lgpl-lib/javacl.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/jnaerator.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/opencl4java.jar"/>
    <path refid="library.ant-contrib-1.0b3.classpath"/>
    <path refid="library.cltool4j-1.0.3.classpath"/>
    <path refid="library.habanero-java-lib-0.1.2.classpath"/>
  </path>
  
  <path id="bubs-parser.runtime.production.module.classpath">
    <pathelement location="${bubs-parser.output.dir}"/>
    <pathelement location="${basedir}/java/bsd-lib/cjunit.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/javacl.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/jnaerator.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/opencl4java.jar"/>
    <path refid="library.ant-contrib-1.0b3.classpath"/>
    <path refid="library.cltool4j-1.0.3.classpath"/>
    <path refid="library.habanero-java-lib-0.1.2.classpath"/>
  </path>
  
  <path id="bubs-parser.module.classpath">
    <pathelement location="${bubs-parser.output.dir}"/>
    <pathelement location="${basedir}/java/bsd-lib/cjunit.jar"/>
    <path refid="${module.jdk.classpath.bubs-parser}"/>
    <pathelement location="${basedir}/java/lgpl-lib/javacl.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/jnaerator.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/opencl4java.jar"/>
    <path refid="library.ant-contrib-1.0b3.classpath"/>
    <path refid="library.cltool4j-1.0.3.classpath"/>
    <path refid="library.habanero-java-lib-0.1.2.classpath"/>
  </path>
  
  <path id="bubs-parser.runtime.module.classpath">
    <pathelement location="${bubs-parser.output.dir}"/>
    <pathelement location="${basedir}/java/bsd-lib/cjunit.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/javacl.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/jnaerator.jar"/>
    <pathelement location="${basedir}/java/lgpl-lib/opencl4java.jar"/>
    <path refid="library.ant-contrib-1.0b3.classpath"/>
    <path refid="library.cltool4j-1.0.3.classpath"/>
    <path refid="library.habanero-java-lib-0.1.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.bubs-parser">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bubs-parser">
    <patternset refid="excluded.from.module.bubs-parser"/>
  </patternset>
  
  <path id="bubs-parser.module.sourcepath">
    <dirset dir="${module.bubs-parser.basedir}">
      <include name="java/src"/>
      <include name="java/berkeley-src"/>
      <include name="unit-test-data"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bubs-parser" depends="compile.module.bubs-parser.production,compile.module.bubs-parser.tests" description="Compile module bubs-parser"/>
  
  <target name="compile.module.bubs-parser.production" depends="register.custom.compilers" description="Compile module bubs-parser; production classes">
    <mkdir dir="${bubs-parser.output.dir}"/>
    <javac2 destdir="${bubs-parser.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bubs-parser}/javac">
      <compilerarg line="${compiler.args.bubs-parser}"/>
      <bootclasspath refid="bubs-parser.module.bootclasspath"/>
      <classpath refid="bubs-parser.module.production.classpath"/>
      <src refid="bubs-parser.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bubs-parser"/>
    </javac2>
    
    <copy todir="${bubs-parser.output.dir}">
      <fileset dir="${module.bubs-parser.basedir}/java/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.bubs-parser.basedir}/java/berkeley-src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.bubs-parser.basedir}/unit-test-data">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bubs-parser.tests" depends="register.custom.compilers,compile.module.bubs-parser.production" description="compile module bubs-parser; test classes" unless="skip.tests"/>
  
  <target name="clean.module.bubs-parser" description="cleanup module">
    <delete dir="${bubs-parser.output.dir}"/>
    <delete dir="${bubs-parser.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.bubs-parser" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.bubs-parser" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.bubs-parser:jar" value="${basedir}/out/artifacts/bubs_parser_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.bubs-parser.jar" value="${artifacts.temp.dir}/bubs-parser.jar"/>
  </target>
  
  <target name="artifact.bubs-parser:jar" depends="init.artifacts, compile.module.bubs-parser" description="Build &#39;bubs-parser:jar&#39; artifact">
    <property name="artifact.temp.output.bubs-parser:jar" value="${artifacts.temp.dir}/bubs_parser_jar"/>
    <mkdir dir="${artifact.temp.output.bubs-parser:jar}"/>
    <jar destfile="${temp.jar.path.bubs-parser.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${bubs-parser.output.dir}"/>
      <zipfileset src="${basedir}/java/lgpl-lib/javacl.jar"/>
      <zipfileset src="${basedir}/java/lgpl-lib/opencl4java.jar"/>
      <zipfileset src="${basedir}/lib/cltool4j-1.0.3.jar"/>
      <zipfileset src="${basedir}/lib/fastutil-6.5.15.jar"/>
      <zipfileset src="${basedir}/lib/hamcrest-core-1.3.jar"/>
      <zipfileset src="${basedir}/lib/javax.servlet-api-3.0.1.jar"/>
      <zipfileset src="${basedir}/lib/junit-4.11.jar"/>
      <zipfileset src="${basedir}/java/bsd-lib/cjunit.jar"/>
      <zipfileset src="${basedir}/java/lgpl-lib/jnaerator.jar"/>
      <zipfileset src="${basedir}/lib/habanero-java-lib-0.1.2.jar"/>
      <zipfileset src="${basedir}/build-lib/ant-contrib-1.0b3.jar"/>
      <zipfileset src="${basedir}/build-lib/bcel-5.2.jar"/>
      <zipfileset src="${basedir}/build-lib/commons-lang-2.4.jar"/>
      <zipfileset src="${basedir}/build-lib/genjar.jar"/>
    </jar>
    <copy file="${temp.jar.path.bubs-parser.jar}" tofile="${artifact.temp.output.bubs-parser:jar}/bubs-parser.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.bubs-parser:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.bubs-parser:jar}"/>
    <copy todir="${artifact.output.bubs-parser:jar}">
      <fileset dir="${artifact.temp.output.bubs-parser:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>